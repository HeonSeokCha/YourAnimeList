<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable
            name="model"
            type="com.chs.youranimelist.AnimeDetailQuery.Media" />
    </data>
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".ui.detail.anime.AnimeDetailFragment">

            <ImageView
                android:id="@+id/img_bannerImage"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:foreground="@drawable/background_gradient"
                android:scaleType="fitXY"
                app:animeDetailImageBanner="@{model}"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:src="@tools:sample/backgrounds/scenic" />

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/btn_trailer_play"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:src="@drawable/ic_play"
                app:animeDetailTrailerVisible="@{model.trailer}"
                app:layout_constraintBottom_toBottomOf="@+id/img_bannerImage"
                app:layout_constraintEnd_toEndOf="@+id/img_bannerImage"
                app:layout_constraintStart_toStartOf="@+id/img_bannerImage"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/img_cover_image"
                android:layout_width="125dp"
                android:layout_height="175dp"
                android:scaleType="fitXY"
                android:layout_marginStart="8dp"
                app:animeDetailImageCover="@{model.coverImage.extraLarge}"
                app:layout_constraintBottom_toBottomOf="@+id/img_bannerImage"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/img_bannerImage"
                tools:src="@tools:sample/avatars" />

            <TextView
                android:id="@+id/txt_anime_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:ellipsize="end"
                android:maxLines="2"
                android:textSize="18dp"
                android:text=""
                app:animeDetailEnglishNull="@{model.title}"
                app:layout_constrainedWidth="true"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toEndOf="@+id/img_cover_image"
                app:layout_constraintTop_toBottomOf="@+id/img_bannerImage"
                tools:text="TextView" />

            <ProgressBar
                android:id="@+id/detailPage_progressBar"
                style="?android:attr/progressBarStyle"
                android:elevation="3dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/txt_anime_year"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="TextView"
                app:animeDetailFormatYear="@{model}"
                app:layout_constraintStart_toStartOf="@+id/txt_anime_title"
                app:layout_constraintTop_toBottomOf="@+id/txt_anime_title" />

            <Button
                android:id="@+id/btn_save_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:text="ADD MY LIST"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txt_anime_favorite" />

            <TextView
                android:id="@+id/txt_anime_score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:drawableLeft="@drawable/ic_score"
                android:drawablePadding="1dp"
                android:textSize="12sp"
                app:animeDetailScoreVisible="@{model.averageScore}"
                app:layout_constraintStart_toEndOf="@+id/img_cover_image"
                app:layout_constraintTop_toBottomOf="@+id/txt_anime_year"
                tools:text="67" />

            <TextView
                android:id="@+id/txt_anime_favorite"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:drawableLeft="@drawable/ic_favorite"
                android:drawablePadding="1dp"
                android:text="@{model.favourites.toString()}"
                android:textSize="12sp"
                app:layout_constraintStart_toEndOf="@+id/txt_anime_score"
                app:layout_constraintTop_toBottomOf="@+id/txt_anime_year"
                tools:text="188" />

            <com.google.android.material.tabs.TabLayout
                android:id="@+id/tab_anime_detail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/btn_save_list"
                app:tabPaddingStart="10dp" />

            <androidx.viewpager2.widget.ViewPager2
                android:id="@+id/viewPager_anime_detail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tab_anime_detail"
                app:layout_constraintVertical_bias="0.0" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>
</layout>
