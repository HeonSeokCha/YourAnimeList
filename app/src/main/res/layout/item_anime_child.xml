<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
        <import type="android.view.View" />
        <variable
            name="model"
            type="com.chs.youranimelist.fragment.AnimeList" />
    </data>

    <androidx.cardview.widget.CardView
        android:layout_width="130dp"
        android:layout_height="270dp"
        app:cardCornerRadius="5dp"
        app:cardUseCompatPadding="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/img_animeList"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:adjustViewBounds="true"
                app:animeImageCover="@{model.coverImage.extraLarge}"
                app:layout_constraintDimensionRatio="2:3"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:srcCompat="@tools:sample/avatars" />

            <TextView
                android:id="@+id/txt_animeList_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="8dp"
                android:ellipsize="end"
                android:maxLines="2"
                android:textSize="13sp"
                android:text="@{model.title.english ?? model.title.romaji}"
                tools:text="TextView"
                app:layout_constrainedWidth="true"
                app:layout_constraintBottom_toTopOf="@+id/txt_anime_status"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/img_animeList"
                app:layout_constraintVertical_bias="0.0" />

            <TextView
                android:id="@+id/txt_anime_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                tools:text="TextView"
                android:textSize="12sp"
                app:animeStatusValue="@{model.status.toString()}"
                app:layout_constraintBottom_toTopOf="@+id/txt_anime_type"
                app:layout_constraintStart_toStartOf="@+id/txt_animeList_title" />

            <TextView
                android:id="@+id/txt_anime_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:textSize="12dp"
                tools:text="TextView"
                app:animeFormatYear="@{model}"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="@+id/txt_anime_status" />

            <TextView
                android:id="@+id/txt_animeList_score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="8dp"
                android:drawableLeft="@drawable/ic_score"
                android:textSize="12sp"
                tools:text="75"
                app:animeScoreVisible="@{model.averageScore}"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

</layout>
