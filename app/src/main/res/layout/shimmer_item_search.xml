<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="180dp">

    <View
        android:id="@+id/shimmer_search_img"
        android:layout_width="120dp"
        android:layout_height="180dp"
        android:background="@color/shimmer"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="2:3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/shimmer_search_title"
        android:layout_width="200dp"
        android:layout_height="14dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:background="@color/shimmer"
        app:layout_constraintStart_toEndOf="@+id/shimmer_search_img"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/shimmer_search_format"
        android:layout_width="100dp"
        android:layout_height="14dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:background="@color/shimmer"
        app:layout_constraintStart_toEndOf="@+id/shimmer_search_img"
        app:layout_constraintTop_toBottomOf="@+id/shimmer_search_title" />

    <View
        android:id="@+id/shimmer_search_score"
        android:layout_width="30dp"
        android:layout_height="14dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:background="@color/shimmer"
        app:layout_constraintStart_toEndOf="@+id/shimmer_search_img"
        app:layout_constraintTop_toBottomOf="@+id/shimmer_search_format" />

    <View
        android:id="@+id/shimmer_search_favorite"
        android:layout_width="30dp"
        android:layout_height="14dp"
        android:layout_marginStart="16dp"
        android:background="@color/shimmer"
        app:layout_constraintStart_toEndOf="@+id/shimmer_search_score"
        app:layout_constraintTop_toTopOf="@+id/shimmer_search_score" />

</androidx.constraintlayout.widget.ConstraintLayout>