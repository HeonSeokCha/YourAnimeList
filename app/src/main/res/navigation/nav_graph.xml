<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/MainFragment">

    <fragment
        android:id="@+id/MainFragment"
        android:name="com.chs.youranimelist.ui.home.HomeFragment"
        android:label="YourAnimeList"
        tools:layout="@layout/fragment_home">
        <action
            android:id="@+id/action_FirstFragment_to_SecondFragment"
            app:destination="@id/AnimeDetailFragment" />
        <action
            android:id="@+id/action_FirstFragment_to_animeListFragment"
            app:destination="@id/animeListFragment" />
    </fragment>
    <fragment
        android:id="@+id/AnimeDetailFragment"
        android:name="com.chs.youranimelist.ui.detail.anime.AnimeDetailFragment"
        android:label="AnimeDetailFragment"
        tools:layout="@layout/fragment_anime_detail">

        <argument
            android:name="animeId"
            app:argType="integer" />
        <argument
            android:name="animeName"
            app:argType="string" />
    </fragment>
    <fragment
        android:id="@+id/animeListFragment"
        android:name="com.chs.youranimelist.ui.home.AnimeListFragment"
        android:label="fragment_anime_list"
        tools:layout="@layout/fragment_anime_list" >
        <argument
            android:name="sortType"
            app:argType="string" />
        <action
            android:id="@+id/action_animeListFragment_to_AnimeDetailFragment"
            app:destination="@id/AnimeDetailFragment" />
    </fragment>
</navigation>